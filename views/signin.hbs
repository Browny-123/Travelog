<div class="main-container">
    <section class="sign-in-container">
        <div class="site-logo">
            <img src="https://res.cloudinary.com/dsj26eqz4/image/upload/v1574017108/travellog_cctkdp.png"
                alt="site-logo">
        </div>
        <form action="/" method="post" class="sign-in-form">
